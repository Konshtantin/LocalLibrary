<%- include('./partials/head') %>
<body>
    <div class="app">
        <%- include('./partials/sidebar') %>
        <div class="content">
            <h1>ID: <%= bookinstance._id %> </h1>

            <p>Title: <a href="<%= bookinstance.book.url %>"><%= bookinstance.book.title %> </a></p>
            <p>Imprint: <%= bookinstance.imprint %> </p>

            <p>Status: 
            <% if (bookinstance.status === 'Available') { %>
                <span class="text-success"><%= bookinstance.status %></span> 
            <% } else if (bookinstance.status === 'Maintenance') { %>
                <span class="text-danger"><%= bookinstance.status %></span> 
            <% } else { %>
                <span class="text-warning"><%= bookinstance.status %> </span>
            <% } %> 
            </p>
            <% if (bookinstance.status != 'Available') { %>
                <p>Due back <%= bookinstance.dbf %> </p>
            <% } %>
            <div><a href="<%= bookinstance.url+'/delete' %>">Delete BookInstance</a></div>
            <div><a href="<%= bookinstance.url+'/update' %>">Update BookInstance</a></div>
        </div>
    </div>
</body>
</html>