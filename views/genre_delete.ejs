<%- include('./partials/head') %>
<body>
    <div class="app">
        <%- include('./partials/sidebar') %>
        <div class="content">
            <h1><%= title %></h1>
            <h2>Genre: <%= genre.name %> </h2>

            <% if (genre_books.length>0) { %>
                <p>First of all delete following books!</p>

                <% genre_books.forEach(book => { %>
                   <p><a href="<%= book.url %>"><%= book.title %></a></p>
                <% }) %>
            <% } else { %>
                <p>Do you really want to delete genre <%= genre.name %> ?</p>
                <form action="" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="gid" id="gid" value="<%= genre._id %>">
                    </div>
                    <button type="submit">Delete Genre</button>
                </form>
            <% } %> 
        </div>
    </div>
</body>
</html>