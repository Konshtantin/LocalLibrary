<%- include('./partials/head') %>
<body>
    <div class="app">
        <%- include('./partials/sidebar') %>
        <div class="content">
            <h1><%= title %></h1>
            <h2><%= book.title %> </h2>

            <% if (bookinstances.length > 0) { %>
                <p>First of all DELETE following book instances!</p>

                <div>
                    <h4>Book Instances</h4>
                    <dl>
                        <% bookinstances.forEach(instance => { %>
                            <dt>
                                <a href="<%= instance.url %>"><%= instance.url %> </a>
                            </dt>
                            <dd>
                                <p>Imprint: <%= instance.imprint %> </p>
                                <p>Author: <%= book.author.name %> </p>
                            </dd>
                        <% }) %>
                    </dl>
                    
                </div>
            <% } else { %>
                <p>Do you really want to delete book of <%= book.author.name %> ?</p>

                <form action="" method="POST">
                    <div class="form-group">
                        <input type="hidden" name="bookid" id="bookid" value="<%= book._id %>">
                    </div>
                    <button type="submit">Delete Book</button>
                </form>
            <% } %> 
        </div>
    </div>
</body>
</html>